<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
    </style>

    <style name="LightThemeBlue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textAppearance">@style/textLight</item>
        <item name="android:textViewStyle">@style/textLight</item>
        <item name="android:spinnerItemStyle">@style/spinnerLight</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
    </style>

    <style name="DarkThemeBlue" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="android:textAppearance">@style/textDark</item>
        <item name="android:textViewStyle">@style/textDark</item>
        <item name="android:spinnerItemStyle">@style/spinnerDark</item>
        <item name="colorPrimary">@color/darkcolorPrimary</item>
        <item name="colorPrimaryVariant">@color/darkcolorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/darkcolorOnPrimary</item>
        <item name="colorSecondary">@color/darkcolorSecondary</item>
        <item name="colorOnSecondary">@color/darkcolorOnSecondary</item>
        <item name="colorSurface">@color/darkcolorSurface</item>
        <item name="colorOnSurface">@color/darkcolorOnSurface</item>
        <item name="colorOnBackground">@color/darkcolorOnBackground</item>
    </style>

    <!-- Light Mode Pink -->
    <style name="LightModePink" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/lightPinkPrimary</item>
        <item name="colorPrimaryVariant">@color/lightPinkPrimaryDark</item>
        <item name="colorSecondary">@color/lightPinkSecondary</item>
        <item name="colorOnPrimary">@color/lightPinkOnPrimary</item>
        <item name="colorOnSecondary">@color/lightPinkOnSecondary</item>
        <item name="colorSurface">@color/lightPinkSurface</item>
        <item name="colorOnSurface">@color/lightPinkOnSurface</item>
        <item name="colorOnBackground">@color/lightPinkBackground</item>

    </style>


    <!-- Dark Mode Pink -->
    <style name="DarkModePink" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/darkPinkPrimary</item>
        <item name="colorPrimaryVariant">@color/darkPinkPrimaryContainer</item>
        <item name="colorSecondary">@color/darkPinkSecondary</item>
        <item name="colorOnPrimary">@color/darkPinkOnPrimary</item>
        <item name="colorOnSecondary">@color/darkPinkOnSecondary</item>
        <item name="colorSurface">@color/darkPinkSurface</item>
        <item name="colorOnSurface">@color/darkPinkOnSurface</item>
        <item name="colorOnBackground">@color/darkPinkBackground</item>
    </style>

    <!-- Light Mode Purple -->
    <style name="LightModePurple" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/lightPurplePrimary</item>
        <item name="colorPrimaryVariant">@color/lightPurplePrimaryDark</item>
        <item name="colorSecondary">@color/lightPurpleSecondary</item>
        <item name="colorOnPrimary">@color/lightPurpleOnPrimary</item>
        <item name="colorOnSecondary">@color/lightPurpleOnSecondary</item>
        <item name="colorSurface">@color/lightPurpleSurface</item>
        <item name="colorOnSurface">@color/lightPurpleOnSurface</item>
        <item name="colorOnBackground">@color/lightPurpleBackground</item>
    </style>

    <!-- Dark Mode Purple -->
    <style name="DarkModePurple" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/darkPurplePrimary</item>
        <item name="colorPrimaryVariant">@color/darkPurplePrimaryContainer</item>
        <item name="colorSecondary">@color/darkPurpleSecondary</item>
        <item name="colorOnPrimary">@color/darkPurpleOnPrimary</item>
        <item name="colorOnSecondary">@color/darkPurpleOnSecondary</item>
        <item name="colorSurface">@color/darkPurpleSurface</item>
        <item name="colorOnSurface">@color/darkPurpleOnSurface</item>
        <item name="colorOnBackground">@color/darkPurpleBackground</item>
    </style>
    <style name="textLight" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textColorPrimary">@color/colorOnPrimary</item>
        <item name="android:textColorSecondary">@color/colorOnPrimary</item>
    </style>
    <style name="spinnerLight" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:background">@color/colorSurface</item>
        <item name="minHeight">48dp</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="textDark" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/darkcolorOnPrimary</item>
        <item name="android:textColorPrimary">@color/darkcolorOnPrimary</item>
        <item name="android:textColorSecondary">@color/darkcolorOnPrimary</item>
    </style>

    <style name="spinnerDark" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/darkcolorOnPrimary</item>
        <item name="android:background">@color/darkcolorSurface</item>
        <item name="minHeight">48dp</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="Base.Theme.Clairvoyance" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:timePickerStyle">@style/MyTimePickerStyle</item>
    </style>
    <style name="MyTimePickerStyle" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

</resources>


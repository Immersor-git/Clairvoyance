<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
    </style>

    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textAppearance">@style/textLight</item>
        <item name="android:textViewStyle">@style/textLight</item>
        <item name="android:spinnerItemStyle">@style/spinnerLight</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="android:textAppearance">@style/textDark</item>
        <item name="android:textViewStyle">@style/textDark</item>
        <item name="android:spinnerItemStyle">@style/spinnerDark</item>
        <item name="colorPrimary">@color/darkcolorPrimary</item>
        <item name="colorPrimaryVariant">@color/darkcolorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/darkcolorOnPrimary</item>
        <item name="colorSecondary">@color/darkcolorSecondary</item>
        <item name="colorOnSecondary">@color/darkcolorOnSecondary</item>
        <item name="colorSurface">@color/darkcolorSurface</item>
        <item name="colorOnSurface">@color/darkcolorOnSurface</item>
        <item name="colorOnBackground">@color/darkcolorOnBackground</item>
    </style>
    <style name="textLight" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>
    <style name="spinnerLight">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="textDark" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/darkcolorOnPrimary</item>
    </style>

    <style name="spinnerDark">
        <item name="android:textColor">@color/darkcolorOnPrimary</item>
        <item name="android:background">@color/darkcolorPrimary</item>
    </style>

</resources>

